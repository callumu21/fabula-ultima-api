{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node", "jest"],
    "typeRoots": ["./src/typings", "./node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
}
