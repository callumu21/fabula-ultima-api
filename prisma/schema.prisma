generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Class {
  id          String   @id
  name        String   @unique
  description String
  questions   String[]
  benefits    Json
  skills      Skill[]
}

model Skill {
  id          String @id
  name        String
  description String
  classId     String
  class       Class  @relation(fields: [classId], references: [id])
}
